{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "server/dist"
      }
    },
    {
      "src": "server/dist/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/server/dist/(.*)", "dest": "/server/dist/$1" },
    { "src": "/(.*)", "dest": "/server/dist/src/server.js" }
  ]
}
